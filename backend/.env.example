# Trading AI Platform Environment Configuration
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/trading_ai
DATABASE_URL=postgresql://username:password@localhost:5432/trading_ai
REDIS_URL=redis://localhost:6379

# AI Model API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Trading Platform APIs
DARWINEX_API_KEY=your_darwinex_api_key
DARWINEX_SECRET=your_darwinex_secret
DARWINEX_DEMO=true

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRE=7d

# Stripe Configuration (for subscriptions)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Feature Flags
ENABLE_ML_MODELS=true
ENABLE_PAPER_TRADING=true
ENABLE_SOCIAL_TRADING=false
ENABLE_ADVANCED_ANALYTICS=true

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# Market Data
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key
FINNHUB_API_KEY=your_finnhub_key

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_here
